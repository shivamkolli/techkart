<div class="span3">
    <h2>Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form'}) do |f| %>
    <%= devise_error_messages! %>
      <label>User Name</label>
      <%= f.text_field :name, :class => "span3", autofocus: true, autocomplete: "off" %>
      <label>Email Address</label>
      <%= f.email_field :email, :class => "span3", autofocus: true, autocomplete: "off" %>
      <label>Password</label>
      <%= f.password_field :password, :class => "span3", autocomplete: "off" %>
      <label>Confim Password</label>
      <%= f.password_field :password_confirmation, :class => "span3", autocomplete: "off" %>
      <%= f.submit "Sign up", :class => "btn btn-primary pull-right", data: { disable_with: 'Processing...' } %>
      <div class="clearfix"></div>
    <% end %>
</div>
<%= render "devise/shared/links" %>
